name: benefits-navigator-staging
region: nyc
features:
  - buildpack-stack=ubuntu-22

# App-level environment variables (inherited by all components)
envs:
  - key: DJANGO_SETTINGS_MODULE
    value: benefits_navigator.settings
  - key: DEBUG
    value: "False"
  - key: USE_S3
    value: "False"
  - key: STAGING
    value: "True"
  # Secrets - values must be set in DO Console after deploy
  - key: SECRET_KEY
    value: "CHANGE_ME"
  - key: DATABASE_URL
    value: "CHANGE_ME"
  - key: REDIS_URL
    value: "CHANGE_ME"
  - key: CELERY_BROKER_URL
    value: "CHANGE_ME"
  - key: OPENAI_API_KEY
    value: "CHANGE_ME"
  - key: SENTRY_DSN
    value: "CHANGE_ME"
  - key: FIELD_ENCRYPTION_KEY
    value: "CHANGE_ME"
  # Pilot mode settings (set values in DO Console)
  - key: PILOT_MODE
    value: "True"
  - key: PILOT_BILLING_DISABLED
    value: "True"
  - key: PILOT_PREMIUM_ACCESS
    value: "False"
  - key: PILOT_PREMIUM_DOMAINS
    value: ""
  - key: PILOT_PREMIUM_EMAILS
    value: ""
  - key: PILOT_DATA_RETENTION_DAYS
    value: "30"

services:
  # Django Web Application
  - name: web
    github:
      repo: Beaudoin0zach/benefits_navigator
      branch: main
      deploy_on_push: true
    dockerfile_path: Dockerfile.prod
    instance_count: 1
    instance_size_slug: basic-xxs
    http_port: 8000
    routes:
      - path: /
    health_check:
      http_path: /health/
      initial_delay_seconds: 30
      period_seconds: 10
    envs:
      - key: DEBUG
        value: "False"
      - key: STAGING
        value: "True"
      - key: ALLOWED_HOSTS
        value: "CHANGE_ME"
      - key: SECRET_KEY
        value: "CHANGE_ME"
      - key: DATABASE_URL
        value: "CHANGE_ME"
      - key: REDIS_URL
        value: "CHANGE_ME"
      - key: FIELD_ENCRYPTION_KEY
        value: "CHANGE_ME"

workers:
  # Celery Worker (background tasks)
  - name: worker
    github:
      repo: Beaudoin0zach/benefits_navigator
      branch: main
      deploy_on_push: true
    dockerfile_path: Dockerfile.prod
    instance_count: 1
    instance_size_slug: basic-xxs
    run_command: celery -A benefits_navigator worker -l info --concurrency=2
    envs:
      - key: DJANGO_SETTINGS_MODULE
        value: "benefits_navigator.settings"
      - key: DEBUG
        value: "False"
      - key: STAGING
        value: "True"
      - key: ALLOWED_HOSTS
        value: "CHANGE_ME"
      - key: SECRET_KEY
        value: "CHANGE_ME"
      - key: DATABASE_URL
        value: "CHANGE_ME"
      - key: REDIS_URL
        value: "CHANGE_ME"
      - key: CELERY_BROKER_URL
        value: "CHANGE_ME"
      - key: OPENAI_API_KEY
        value: "CHANGE_ME"
      - key: FIELD_ENCRYPTION_KEY
        value: "CHANGE_ME"

jobs:
  # Run migrations before deploying new code
  - name: migrate
    github:
      repo: Beaudoin0zach/benefits_navigator
      branch: main
      deploy_on_push: true
    dockerfile_path: Dockerfile.prod
    kind: PRE_DEPLOY
    instance_count: 1
    instance_size_slug: basic-xxs
    run_command: /bin/sh -c "python manage.py migrate --noinput; exit 0"
    envs:
      - key: SECRET_KEY
        value: "CHANGE_ME"
      - key: DATABASE_URL
        value: "CHANGE_ME"
      - key: FIELD_ENCRYPTION_KEY
        value: "CHANGE_ME"

# Secrets to set in DO Console (App-Level Environment Variables):
# - SECRET_KEY (generate with: python -c "import secrets; print(secrets.token_urlsafe(50))")
# - FIELD_ENCRYPTION_KEY (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
# - DATABASE_URL (postgresql://user:password@host:port/dbname)
# - REDIS_URL / CELERY_BROKER_URL (rediss://user:password@host:port)
# - OPENAI_API_KEY
# - SENTRY_DSN
# - ALLOWED_HOSTS (comma-separated list of domains)
